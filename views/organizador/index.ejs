<%- include('../partials/head.ejs') %>
<%- include('../partials/nav.ejs') %>
<br>
<div class="container">
    <a href="/organizadores/novo" class="btn btn-primary mb-2">Novo Organizador</a>
    <br>
    <div class="card">
        <div class="card-header">
            Organizadores Cadastrados
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th class="col-10">Nome do Organizador</th>
                        <th class="col-2">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% organizadores.forEach(organizador => { %>
                        <tr>
                            <td><%= organizador.nome %></td>
                            <td>
                                <a href="/organizadores/<%= organizador.id %>" class="btn btn-primary">Editar</a>
                                <a href="/organizadores/delete/<%= organizador.id %>" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
